<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:paddingBottom="@dimen/defaultVerticalMargin"
		android:layout_gravity="center_vertical"
		android:background="@color/backgroundColor">
	<CheckBox
			android:id="@+id/country_item_checkbox"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:buttonTint="@color/primaryText"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent"/>

	<TextView
			android:id="@+id/country_item_caption"
			style="@style/PrimaryTextBold"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:gravity="center_vertical"
			android:text="Dummy text"
			android:layout_marginStart="8dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/country_item_checkbox"
			app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>