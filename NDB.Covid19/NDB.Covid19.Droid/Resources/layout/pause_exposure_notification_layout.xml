<?xml version="1.0" encoding="utf-8" ?> 
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/pause_exposure_notification_layout"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="16dp"
              android:orientation="vertical"
              android:layout_gravity="center"
              android:gravity="left"
              android:background="@drawable/ic_bubble"
              android:visibility="visible">
	<TextView
		android:id="@+id/pause_message"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textAlignment="viewStart"
		android:layout_gravity="left"
		android:text="SOME TEXT"
        android:padding="14dp"
		android:gravity="start"
		android:background="@android:color/white"
        android:textColor="@color/primaryText"
        android:textSize="16sp">
	</TextView>
    <RadioGroup
        android:minWidth="30px"
        android:minHeight="30px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pause_radio_group">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="RadioButton"
            style="@style/PauseExposureNotificationRadioButton"
            android:id="@+id/pause_manual_restart_button"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            style="@style/PauseExposureNotificationRadioButton"
            android:id="@+id/pause_one_hour_button"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            style="@style/PauseExposureNotificationRadioButton"
            android:id="@+id/pause_two_hours_button"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            style="@style/PauseExposureNotificationRadioButton"
            android:id="@+id/pause_four_hours_button"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RadioButton"
            style="@style/PauseExposureNotificationRadioButton"
            android:id="@+id/pause_eight_hours_button"/>
    </RadioGroup>
</LinearLayout>