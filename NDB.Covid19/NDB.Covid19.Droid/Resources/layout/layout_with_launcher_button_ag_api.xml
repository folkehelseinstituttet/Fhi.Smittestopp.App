<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
            android:id="@+id/launcher_header"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/colorPrimary"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="40dp">

        <ImageView
                android:src="@drawable/ic_logo_fhi_white"
                android:layout_width="138dp"
                android:layout_height="69dp"
                android:id="@+id/launcer_icon_imageview"
                android:importantForAccessibility="yes"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_margin="24dp"/>
    </RelativeLayout>

    <ImageView
            android:src="@drawable/ic_app_logo"
            android:id="@+id/app_logo"
            android:layout_width="wrap_content"
            android:importantForAccessibility="yes"
            android:layout_height="0dp"
            app:layout_constraintHeight_default="percent"
            app:layout_constraintHeight_percent="0.25"
            app:layout_constraintTop_toBottomOf="@id/launcher_header"
            app:layout_constraintBottom_toTopOf="@id/launcher_button_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    
    <LinearLayout
            android:id="@+id/launcher_button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/app_logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
        <Button
                android:text="Start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="150dp"
                android:singleLine="true"
                android:drawablePadding="-30dp"
                android:paddingEnd="30dp"
                android:drawableRight="@drawable/ic_start_page_arrow_right"
                style="@style/DefaultButton"
                android:id="@+id/launcher_button" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>