<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal">

        <RelativeLayout
                android:id="@+id/daily_numbers_close_cross_btn"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:padding="12dp">

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_close_blue" />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
            android:id="@+id/daily_numbers_counter_on_scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginHorizontal="@dimen/defaultHorizontalMargin"
                android:paddingBottom="@dimen/defaultVerticalMargin"
                android:orientation="vertical">

            <LinearLayout
                    android:id="@+id/daily_numbers_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/defaultVerticalMargin"
                    android:orientation="vertical">

                <RelativeLayout
                        android:id="@+id/daily_numbers_relativeLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_header_textView"
                            style="@style/HeaderText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="Header" />

                    <TextView
                            android:id="@+id/daily_numbers_statistics_header_textView"
                            style="@style/PrimaryTextBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/daily_numbers_header_textView"
                            android:text="Sub header" />

                    <TextView
                            android:id="@+id/daily_numbers_statistics_text_textview"
                            style="@style/PrimaryTextRegular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/daily_numbers_statistics_header_textView"
                            android:text="Statistics text"/>
                </RelativeLayout>
            </LinearLayout>

            <TableLayout
                    android:id="@+id/table1"
                    android:stretchColumns="*"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/verticalPaddingDailyNumbersTable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/daily_numbers_linear_layout">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_infected_header_text"
                            style="@style/DailyNumbersItemHeaderText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_top"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingTop="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy name"/>

                    <TextView
                            android:id="@+id/daily_numbers_tested_header_text"
                            style="@style/DailyNumbersItemHeaderText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_top"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingTop="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy name"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_infected_number_text"
                            style="@style/DailyNumbersItemNumber"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_mid"
                            android:breakStrategy="balanced"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:text="+001" />

                    <TextView
                            android:id="@+id/daily_numbers_tested_number_text"
                            style="@style/DailyNumbersItemNumber"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_mid"
                            android:breakStrategy="balanced"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:text="+002" />
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_infected_total_text"
                            style="@style/DailyNumbersSubText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_bottom"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingBottom="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy sub name" />

                    <TextView
                            android:id="@+id/daily_numbers_tested_total_text"
                            style="@style/DailyNumbersSubText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_bottom"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingBottom="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy sub name" />
                </TableRow>
            </TableLayout>

            <TableLayout
                    android:id="@+id/table2"
                    android:stretchColumns="*"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/verticalPaddingDailyNumbersTable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/table1">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_hospitalized_header_text"
                            style="@style/DailyNumbersItemHeaderText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_top"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingTop="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy name"/>

                    <TextView
                            android:id="@+id/daily_numbers_intensive_header_text"
                            style="@style/DailyNumbersItemHeaderText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_top"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingTop="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy name"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_hospitalized_number_text"
                            style="@style/DailyNumbersItemNumber"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_bottom"
                            android:breakStrategy="high_quality"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:text="+003" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/daily_numbers_intensive_number_text"
                            style="@style/DailyNumbersItemNumber"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_bottom"
                            android:breakStrategy="high_quality"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:text="+004"/>
                </TableRow>

            </TableLayout>

            
            <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/table2"
                    android:layout_marginTop="@dimen/defaultVerticalMargin"
                    android:layout_marginBottom="@dimen/defaultVerticalMargin">

                <TextView
                        android:id="@+id/daily_numbers_vaccinations_header_textView"
                        style="@style/PrimaryTextBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/table2"
                        android:text="Sub header" />

                <TextView
                        android:id="@+id/daily_numbers_vaccinations_text_textview"
                        style="@style/PrimaryTextRegular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/daily_numbers_vaccinations_header_textView"
                        android:text="Vaccinations text"/>
            </LinearLayout>

            <TableLayout
                    android:id="@+id/table3"
                    android:stretchColumns="*"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/verticalPaddingDailyNumbersTable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_vaccination_dose1_header_text"
                            style="@style/DailyNumbersItemHeaderText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_top"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingTop="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy name"/>

                    <TextView
                            android:id="@+id/daily_numbers_vaccination_dose2_header_text"
                            style="@style/DailyNumbersItemHeaderText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_top"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingTop="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy name"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_vaccination_dose1_number_text"
                            style="@style/DailyNumbersItemNumber"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_mid"
                            android:breakStrategy="high_quality"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:text="+007" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/daily_numbers_vaccination_dose2_number_text"
                            style="@style/DailyNumbersItemNumber"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_mid"
                            android:breakStrategy="high_quality"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:text="+008"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_vaccination_dose1_total_text"
                            style="@style/DailyNumbersSubText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_bottom"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingBottom="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy sub name" />

                    <TextView
                            android:id="@+id/daily_numbers_vaccination_dose2_total_text"
                            style="@style/DailyNumbersSubText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_bottom"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingBottom="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy sub name"/>
                </TableRow>
            </TableLayout>

            <LinearLayout
                    android:id="@+id/linearLayout5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/table3"
                    android:layout_marginTop="@dimen/defaultVerticalMargin"
                    android:layout_marginBottom="@dimen/defaultVerticalMargin">

                <TextView
                        android:id="@+id/daily_numbers_smittestopp_header_textView"
                        style="@style/PrimaryTextBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/table3"
                        android:text="Sub header"/>

                <TextView
                        android:id="@+id/daily_numbers_smittestopp_text_textview"
                        style="@style/PrimaryTextRegular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"        
                        android:text="Smttestopp text" />
            </LinearLayout>
            <TableLayout
                    android:id="@+id/table4"
                    android:stretchColumns="*"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/verticalPaddingDailyNumbersTable"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linearLayout5">

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_smittestopp_downloads_header_text"
                            style="@style/DailyNumbersItemHeaderText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_top"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingTop="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy name"/>

                    <TextView
                            android:id="@+id/daily_numbers_positive_shared_header_text"
                            style="@style/DailyNumbersItemHeaderText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_top"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingTop="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy name"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_smittestopp_downloads_number_text"
                            style="@style/DailyNumbersItemNumber"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_mid"
                            android:breakStrategy="high_quality"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:text="+009" />

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/daily_numbers_positive_shared_number_text"
                            style="@style/DailyNumbersItemNumber"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_mid"
                            android:breakStrategy="high_quality"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:text="+010"/>
                </TableRow>

                <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/daily_numbers_vaccination_dose1_total_text"
                            style="@style/DailyNumbersSubText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="0"
                            android:layout_marginEnd="@dimen/marginEndDailyNumbersTable"
                            android:background="@drawable/counter_background_daily_numbers_bottom"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingBottom="@dimen/verticalPaddingDailyNumbersTable"/>

                    <TextView
                            android:id="@+id/daily_numbers_positive_shared_total_text"
                            style="@style/DailyNumbersSubText"
                            android:layout_weight="0.5"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_column="1"
                            android:background="@drawable/counter_background_daily_numbers_bottom"
                            android:paddingHorizontal="@dimen/horizontalPaddingDailyNumbersTable"
                            android:paddingBottom="@dimen/verticalPaddingDailyNumbersTable"
                            android:text="Dummy sub name"/>
                </TableRow>
            </TableLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>