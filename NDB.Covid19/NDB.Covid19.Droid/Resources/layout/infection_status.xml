<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/infection_status_activity_toolbar_layout"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="center_vertical"
		android:background="@color/infectionStatusButtonOnGreen">

		<ImageView
			android:src="@drawable/ic_logo_fhi_blue"
			android:layout_width="56dp"
			android:layout_height="24dp"
			android:importantForAccessibility="yes"
			android:layout_marginStart="@dimen/defaultHorizontalMargin"
			android:id="@+id/infection_status_app_icon_imageView"/>

		<TextView
			android:text="Menu"
			android:textAlignment="textEnd"
			android:layout_width="0dp"
			android:layout_height="32dp"
			android:layout_weight="1"
			android:gravity="center"
			android:importantForAccessibility="no"
			android:id="@+id/infection_status_menu_text_view"
			style="@style/PrimaryTextMainMenu"/>

		<ImageButton
			android:layout_width="26dp"
			android:layout_height="18dp"
			android:layout_margin="@dimen/defaultHorizontalMargin"
			android:background="@drawable/ic_hamburger_menu_icon"
			android:id="@+id/infection_status_menu_icon_relativeLayout"/>
	</LinearLayout>

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_below="@+id/infection_status_activity_toolbar_layout"
		android:id="@+id/infection_status_scrollView">
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:paddingBottom="54dp"
			android:id="@+id/infection_status_relativeLayout">

			<LinearLayout
				android:id="@+id/infection_status_important_message_banner"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:background="#F5E360"				
				android:foreground="?android:attr/selectableItemBackground"
				android:visibility="gone"
				tools:visibility="visible"
				tools:background="#F5E360">

				<TextView
					android:id="@+id/infection_status_important_message_banner_text"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginHorizontal="@dimen/defaultHorizontalMargin"
					android:layout_marginVertical="@dimen/defaultVerticalMargin"
					android:layout_gravity="center"
					android:textAlignment="center"
					android:textColor="@color/primaryText"
					android:textSize="18sp"					
					style="@style/PrimaryTextRegular"
					tools:text="This is a banner text">
				</TextView>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/infection_status_activity_status_layout"
				android:orientation="vertical"
				android:gravity="center"
				android:paddingTop="36dp"
				android:paddingBottom="@dimen/defaultVerticalMargin"
				android:layout_below="@+id/infection_status_important_message_banner"
				android:background="@color/infectionStatusButtonOnGreen">

				<ImageView
					android:src="@drawable/ic_app_logo"
					android:layout_width="250dp"
					android:layout_height="100dp"
					android:importantForAccessibility="yes"
					android:id="@+id/infection_status_app_logo" />

				<TextView
					android:text="State"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/infection_status_activity_status_textView"
					style="@style/PrimaryTextBold" />
			</LinearLayout>

			<TextView
				android:text="Description"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_marginTop="32dp"
				android:layout_marginBottom="10dp"
				android:layout_marginRight="36dp"
				android:layout_marginLeft="36dp"
				android:layout_below="@+id/infection_status_activity_status_layout"
				android:gravity="center"
				android:id="@+id/infection_status_activivity_status_description_textView"
				style="@style/PrimaryTextRegular"/>

			<Button
				android:text="Start/Stop"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_centerVertical="true"
				android:layout_below="@+id/infection_status_activivity_status_description_textView"
				android:id="@+id/infection_status_on_off_button"
				style="@style/DefaultButton"/>

			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:importantForAccessibility="no"
				android:layout_below="@+id/infection_status_on_off_button"
				android:id="@+id/infection_status_messages_button_relativeLayout">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:importantForAccessibility="no"
					android:id="@+id/infection_status_messages_button_relativeLayout_inner"
					style="@style/InfectionStatusLayoutButton"
					android:background="@drawable/ic_infection_status_tile_border">
					<ImageView
						android:src="@drawable/ic_notification_inactive"
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:layout_centerVertical="true"
						android:layout_alignParentStart="true"
						android:layout_marginEnd="21dp"
						android:id="@+id/infection_status_message_bell_imageView"/>
					<TextView
						android:text="Text"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginBottom="4dp"
						android:importantForAccessibility="no"
						android:breakStrategy="balanced"
						android:layout_toEndOf="@+id/infection_status_message_bell_imageView"
						android:layout_toStartOf="@+id/infection_status_message_arrow_imageView"
						android:id="@+id/infection_status_message_text_textView"
						style="@style/PrimaryTextBold"/>
					<TextView
						android:text="Text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:importantForAccessibility="no"
						android:breakStrategy="balanced"
						android:layout_toEndOf="@+id/infection_status_message_bell_imageView"
						android:layout_toStartOf="@+id/infection_status_message_arrow_imageView"
						android:layout_below="@+id/infection_status_message_text_textView"
						android:id="@+id/infection_status_new_message_text_textView"
						style="@style/PrimaryTextRegular"/>
					<ImageView
						android:src="@drawable/ic_arrow_right"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_alignParentEnd="true"
						android:layout_marginStart="5dp"
						android:id="@+id/infection_status_message_arrow_imageView"/>
				</RelativeLayout>
				<Button
					android:id="@+id/infection_status_messages_button_relativeLayout_button"
					android:importantForAccessibility="yes"
					android:background="@android:color/transparent"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_alignTop="@+id/infection_status_messages_button_relativeLayout_inner"
					android:layout_alignBottom="@+id/infection_status_messages_button_relativeLayout_inner"
					android:layout_alignStart="@+id/infection_status_messages_button_relativeLayout_inner"
					android:layout_alignEnd="@+id/infection_status_messages_button_relativeLayout_inner"
					android:minHeight="0dp"
					android:minWidth="0dp"/>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:importantForAccessibility="no"
				android:layout_below="@+id/infection_status_messages_button_relativeLayout"
				android:id="@+id/infection_status_registration_button_relativeLayout">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:importantForAccessibility="no"
					android:id="@+id/infection_status_registration_button_relativeLayout_inner"
					style="@style/InfectionStatusLayoutButton"
					android:background="@drawable/ic_infection_status_tile_border">
					<ImageView
						android:src="@drawable/ic_covid_19"
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:minWidth="36dp"
						android:minHeight="36dp"
						android:layout_centerVertical="true"
						android:layout_alignParentStart="true"
						android:layout_marginEnd="21dp"
						android:id="@+id/infection_status_registration_virus_imageView"/>
					<TextView
						android:text="Text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="4dp"
						android:importantForAccessibility="no"
						android:breakStrategy="balanced"
						android:layout_toEndOf="@+id/infection_status_registration_virus_imageView"
						android:layout_toStartOf="@+id/infection_status_registration_arrow_imageView"
						android:id="@+id/infection_status_registration_text_textView"
						style="@style/PrimaryTextBold"/>
					<TextView
						android:text="Text"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:importantForAccessibility="no"
						android:breakStrategy="balanced"
						android:layout_toEndOf="@+id/infection_status_registration_virus_imageView"
						android:layout_toStartOf="@+id/infection_status_registration_arrow_imageView"
						android:layout_below="@+id/infection_status_registration_text_textView"
						android:id="@+id/infection_status_registration_login_text_textView"
						style="@style/PrimaryTextRegular"/>
					<ImageView
						android:src="@drawable/ic_arrow_right"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_alignParentEnd="true"
						android:layout_marginStart="5dp"
						android:id="@+id/infection_status_registration_arrow_imageView"/>
				</RelativeLayout>
				<Button
					android:id="@+id/infection_status_registration_button_relativeLayout_button"
					android:importantForAccessibility="yes"
					android:background="@android:color/transparent"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_alignTop="@+id/infection_status_registration_button_relativeLayout_inner"
					android:layout_alignBottom="@+id/infection_status_registration_button_relativeLayout_inner"
					android:layout_alignStart="@+id/infection_status_registration_button_relativeLayout_inner"
					android:layout_alignEnd="@+id/infection_status_registration_button_relativeLayout_inner"
					android:minHeight="0dp"
					android:minWidth="0dp"/>
			</RelativeLayout>
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:importantForAccessibility="no"
				android:layout_below="@+id/infection_status_registration_button_relativeLayout"
				android:id="@+id/infection_status_daily_numbers_button_relativeLayout">
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:importantForAccessibility="no"
					android:id="@+id/infection_status_daily_numbers_button_relativeLayout_inner"
					style="@style/InfectionStatusLayoutButton"
					android:background="@drawable/ic_infection_status_tile_border">
					<ImageView
						android:src="@drawable/ic_todays_numbers"
						android:layout_width="36dp"
						android:layout_height="36dp"
						android:layout_centerVertical="true"
						android:layout_alignParentStart="true"
						android:layout_marginEnd="21dp"
						android:id="@+id/infection_status_daily_numbers_imageView"/>
					<TextView
						android:text="Daily numbers"
						android:layout_width="0dp"
						android:layout_height="wrap_content"
						android:layout_marginBottom="4dp"
						android:importantForAccessibility="no"
						android:breakStrategy="balanced"
						android:layout_toEndOf="@+id/infection_status_daily_numbers_imageView"
						android:layout_toStartOf="@id/infection_status_daily_numbers_arrow_imageView"
						android:id="@+id/infection_status_daily_numbers_text_textView"
						style="@style/PrimaryTextBold"/>
					<TextView
						android:text="Updated"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:importantForAccessibility="no"
						android:breakStrategy="balanced"
						android:layout_toEndOf="@+id/infection_status_daily_numbers_imageView"
						android:layout_toStartOf="@+id/infection_status_daily_numbers_arrow_imageView"
						android:layout_below="@id/infection_status_daily_numbers_text_textView"
						android:id="@+id/infection_status_daily_numbers_updated_textView"
						style="@style/PrimaryTextRegular"/>
					<ImageView
						android:src="@drawable/ic_arrow_right"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_centerVertical="true"
						android:layout_alignParentEnd="true"
						android:layout_marginStart="5dp"
						android:id="@+id/infection_status_daily_numbers_arrow_imageView"/>
				</RelativeLayout>
				<Button
					android:id="@+id/infection_status_daily_numbers_button_relativeLayout_button"
					android:importantForAccessibility="yes"
					android:background="@android:color/transparent"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_alignTop="@id/infection_status_daily_numbers_button_relativeLayout_inner"
					android:layout_alignBottom="@id/infection_status_daily_numbers_button_relativeLayout_inner"
					android:layout_alignStart="@id/infection_status_daily_numbers_button_relativeLayout_inner"
					android:layout_alignEnd="@id/infection_status_daily_numbers_button_relativeLayout_inner"
					android:minHeight="0dp"
					android:minWidth="0dp"/>
			</RelativeLayout>
		</RelativeLayout>
	</ScrollView>
</RelativeLayout>