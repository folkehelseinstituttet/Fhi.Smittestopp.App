<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
        <RelativeLayout
                android:id="@+id/close_cross_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/defaultHorizontalMargin"
                android:layout_marginTop="@dimen/defaultVerticalMargin"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">
            <ImageView
                    android:src="@drawable/ic_close_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/information_consent_scrollView">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/defaultHorizontalMargin"
                android:layout_marginVertical="@dimen/defaultVerticalMargin"
                android:id="@+id/information_consent_relativeLayout">
            <TextView
                    android:text="Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/information_consent_header_textView"
                    style="@style/HeaderText"/>
            <TextView
                    android:text="Consent description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/information_consent_header_textView"
                    android:id="@+id/information_consent_contentDescription_textView"
                    style="@style/PrimaryTextRegular"/>
            <TextView
                    android:text="LookUp header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/defaultVerticalMargin"
                    android:textSize="16sp"
                    android:layout_below="@id/information_consent_contentDescription_textView"
                    android:id="@+id/information_consent_lookup_header_textview"
                    style="@style/PrimaryTextBold"/>
            <TextView
                    android:text="LookUp text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/information_consent_lookup_header_textview"
                    android:id="@+id/information_consent_lookup_text_textview"
                    style="@style/PrimaryTextRegular"/>
            <TextView
                    android:text="Notification header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/defaultVerticalMargin"
                    android:textSize="16sp"
                    android:layout_below="@id/information_consent_lookup_text_textview"
                    android:id="@+id/information_consent_notification_header_textview"
                    style="@style/PrimaryTextBold"/>
            <TextView
                    android:text="Notification text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/information_consent_notification_header_textview"
                    android:id="@+id/information_consent_notification_text_textview"
                    style="@style/PrimaryTextRegular"/>
            <TextView
                    android:text="Be aware text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="48dp"
                    android:layout_below="@id/information_consent_notification_text_textview"
                    android:id="@+id/information_consent_beAware_text_textview"
                    style="@style/PrimaryTextRegular"/>
            <TextView
                    android:text="Notification text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/defaultVerticalMargin"
                    android:layout_below="@id/information_consent_beAware_text_textview"
                    android:id="@+id/information_consent_explanation_text_textview"
                    style="@style/PrimaryTextItalic"/>
            <Button
                    android:text="Consent Button"
                    android:layout_marginVertical="@dimen/defaultVerticalMargin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/information_consent_explanation_text_textview"
                    android:id="@+id/information_consent_idporten_button"
                    style="@style/IDPortenButton"/>
            <ProgressBar
                    android:layout_marginVertical="@dimen/defaultVerticalMargin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/information_consent_progress_bar"/>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>