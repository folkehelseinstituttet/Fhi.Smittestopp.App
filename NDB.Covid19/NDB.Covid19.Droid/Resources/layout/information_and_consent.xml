<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:gravity="center_horizontal">

	<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:gravity="end">
		<RelativeLayout
			android:id="@+id/close_cross_btn"
			android:layout_width="48dp"
			android:layout_height="48dp"
			android:layout_alignParentTop="true"
			android:layout_alignParentRight="true"
			android:padding="12dp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="parent">
			<ImageView
				android:src="@drawable/ic_close_white"
				android:layout_width="match_parent"
				android:layout_height="match_parent"/>
		</RelativeLayout>
	</LinearLayout>>

	<ScrollView
        android:fillViewport="true"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
        android:layout_weight="1"
		android:id="@+id/information_consent_scrollView" >
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:id="@+id/information_consent_relativeLayout" >
			<TextView
				android:text="Header"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:layout_margin="24dp"
				android:id="@+id/information_consent_header_textView"
                style="@style/HeaderText"/>
			<TextView
				android:text="Content"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
               	android:textSize="16sp" 
                android:layout_below="@id/information_consent_header_textView"
                android:id="@+id/information_consent_content_textView"
                style="@style/PrimaryTextRegular"/>
            <TextView
				android:text="Header"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:textSize="16sp" 
                android:layout_below="@id/information_consent_content_textView"
                android:id="@+id/information_consent_subtitle_textView"
                style="@style/PrimaryTextBold"/>
			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_below="@id/information_consent_subtitle_textView"
				android:id="@+id/information_consent_body_one_bullet_linearLayout">
                <ImageView 
                    style="@style/Checkmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/checkmark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body one"
                    android:id="@+id/information_consent_body_one_textView"
                    android:accessibilityTraversalBefore="@id/information_consent_body_two_textView"
                    style="@style/CheckmarkText"/>
            </LinearLayout>
            <LinearLayout
				android:orientation="horizontal"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_below="@id/information_consent_body_one_bullet_linearLayout"
				android:id="@+id/information_consent_body_two_bullet_linearLayout">
                <ImageView 
                    style="@style/Checkmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/checkmark"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Body two"
                    android:id="@+id/information_consent_body_two_textView"
                    style="@style/CheckmarkText"/>
            </LinearLayout>
            <TextView
				android:text="Content"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:textSize="16sp" 
                android:layout_below="@id/information_consent_body_two_bullet_linearLayout"
                android:id="@+id/information_consent_content_two_textView"
                style="@style/PrimaryTextRegular"/>
        </RelativeLayout>
	</ScrollView>
    <Button
	    android:text="Button"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:drawablePadding="7dp"
        android:drawableLeft="@drawable/ic_nemid_white"
	    android:id="@+id/information_consent_nemid_button"
        style="@style/NemIDButton"/>
	<ProgressBar
        android:layout_marginTop="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="36dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:visibility="gone"
	    android:id="@+id/information_consent_progress_bar"/>
</LinearLayout>