<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:text="Header, about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryTextBold"
        android:id="@+id/consent1_about_header"/>
    <TextView
        android:text="About text, section1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryText"
        android:id="@+id/consent1_about_text_section1"
        android:layout_below="@+id/consent1_about_header"
        android:layout_marginBottom="16dp" />
    <TextView
        android:text="About text, section2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryText"
        android:id="@+id/consent1_about_text_section2"
        android:layout_below="@+id/consent1_about_text_section1"
        android:layout_marginBottom="24dp" />

    <TextView
        android:text="Header, how it works"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryTextBold"
        android:id="@+id/consent1_howitworks_header"
        android:layout_below="@+id/consent1_about_text_section2"/>
    <TextView
        android:text="About text, section1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryText"
        android:id="@+id/consent1_howitworks_text_section1"
        android:layout_below="@+id/consent1_howitworks_header"
        android:layout_marginBottom="16dp" />
    <TextView
        android:text="About text, section2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryText"
        android:id="@+id/consent1_howitworks_text_section2"
        android:layout_below="@+id/consent1_howitworks_text_section1"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Samtykke text, section1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryText"
        android:id="@+id/consent1_samtykke_text_section1"
        android:layout_below="@+id/consent1_howitworks_text_section2"
        android:layout_marginBottom="16dp" />
    <TextView
        android:text="Samtykke text, section2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryText"
        android:id="@+id/consent1_samtykke_text_section2"
        android:layout_below="@+id/consent1_samtykke_text_section1"
        android:layout_marginBottom="16dp" />

    <include layout="@layout/consent_paragraph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/consent_paragraph_hvordan_accepterer"
        android:layout_below="@+id/consent1_samtykke_text_section2"
        android:layout_marginBottom="16dp" />

    <TextView
        android:text="Behandling af personopl., section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryText"
        android:id="@+id/consent1_behandlingafpersonopl_text"
        android:layout_below="@+id/consent_paragraph_hvordan_accepterer"
        android:layout_marginBottom="16dp" />

    <Button
        android:text="Privacy policy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/SecondaryButton"
        android:id="@+id/consent_paragraph_policy_btn"
        android:layout_below="@id/consent1_behandlingafpersonopl_text"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="30dp"/>

    <TextView
        android:text="Header, samtykke bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="24dp"
        style="@style/PrimaryTextBold"
        android:id="@+id/consent1_samtykkebottom_header"
        android:layout_below="@+id/consent_paragraph_policy_btn"/>
    <TextView
        android:text="Samtykke bottom, section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/PrimaryText"
        android:id="@+id/consent1_samtykkebottom_text"
        android:layout_below="@+id/consent1_samtykkebottom_header"
        android:layout_marginBottom="16dp" />

</RelativeLayout>