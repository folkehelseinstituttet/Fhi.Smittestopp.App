<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">
        <RelativeLayout
                android:id="@+id/close_cross_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginEnd="@dimen/defaultHorizontalMargin"
                android:layout_marginTop="@dimen/defaultVerticalMargin"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true">
            <ImageView
                    android:src="@drawable/ic_close_blue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/scrollView">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/defaultHorizontalMargin"
                android:layout_marginVertical="@dimen/defaultVerticalMargin"
                android:paddingBottom="@dimen/defaultVerticalMargin"
                android:id="@+id/relativeLayout">
            <TextView
                    android:text="Header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/header_textView"
                    style="@style/HeaderText"/>
            <TextView
                    android:text="Consent description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header_textView"
                    android:id="@+id/contentDescription_textView"
                    style="@style/PrimaryTextRegular"/>
            <TextView
                    android:text="LookUp header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/defaultVerticalMargin"
                    android:textSize="16sp"
                    android:layout_below="@id/contentDescription_textView"
                    android:id="@+id/lookup_header_textview"
                    style="@style/PrimaryTextBold"/>
            <TextView
                    android:text="LookUp text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lookup_header_textview"
                    android:id="@+id/lookup_text_textview"
                    style="@style/PrimaryTextRegular"/>
            <TextView
                    android:text="Notification header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/defaultVerticalMargin"
                    android:textSize="16sp"
                    android:layout_below="@id/lookup_text_textview"
                    android:id="@+id/notification_header_textview"
                    style="@style/PrimaryTextBold"/>
            <TextView
                    android:text="Notification text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/notification_header_textview"
                    android:id="@+id/notification_text_textview"
                    style="@style/PrimaryTextRegular"/>
            <TextView
                    android:text="Be aware text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="48dp"
                    android:layout_below="@id/notification_text_textview"
                    android:id="@+id/beAware_text_textview"
                    style="@style/PrimaryTextRegular"/>
            <TextView
                    android:text="Notification text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="@dimen/defaultVerticalMargin"
                    android:layout_below="@id/beAware_text_textview"
                    android:id="@+id/explanation_text_textview"
                    style="@style/PrimaryTextItalic"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@id/explanation_text_textview">
                <Button
                    android:text="Consent Button"
                    android:layout_marginVertical="@dimen/defaultVerticalMargin"
                    android:layout_marginHorizontal="@dimen/defaultHorizontalMargin"
                    android:layout_width="match_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:id="@+id/consentButton_EU"
                    style="@style/IDPortenButton"/>
                <Button
                    android:text="Consent Button"
                    android:layout_marginVertical="@dimen/defaultVerticalMargin"
                    android:layout_marginHorizontal="@dimen/defaultHorizontalMargin"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:id="@+id/consentButton_onlyNorway"
                    style="@style/IDPortenButton"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>