<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/defaultHorizontalMargin"
            android:layout_marginTop="@dimen/defaultVerticalMargin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        <ImageButton
                android:id="@+id/arrow_back_about"
                android:layout_width="@dimen/backButton"
                android:layout_height="@dimen/backButton"
                android:background="@drawable/ic_circle_arrow_left"
                android:clickable="true"
                android:accessibilityTraversalAfter="@id/settings_about_version_info_textview"
                android:focusable="true"
                android:paddingStart="0dp"
                android:paddingEnd="8dp"
                app:layout_constraintBaseline_toBaselineOf="@id/settings_about_title"
                app:layout_constraintStart_toStartOf="parent"/>

        <TextView
                android:id="@+id/settings_about_title"
                style="@style/HeaderText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Title"
                app:layout_constraintStart_toEndOf="@id/arrow_back_about"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="@dimen/defaultHorizontalMargin"
            app:layout_constraintBottom_toTopOf="@id/settings_about_version_info_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_bar">

        <include
                android:id="@+id/settings_scroll_frame"
                layout="@layout/settings_about_scroll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:isScrollContainer="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/header_bar"/>
    </ScrollView>

    <TextView
            android:id="@+id/settings_about_version_info_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            style="@style/PrimaryTextLight"
            android:paddingHorizontal="@dimen/defaultHorizontalMargin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>