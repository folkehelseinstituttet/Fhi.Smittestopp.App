<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/force_update_logo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="@dimen/defaultHorizontalMargin"
        android:layout_marginTop="@dimen/defaultVerticalMargin"
        android:importantForAccessibility="yes"
        android:src="@drawable/ic_logo_fhi_blue_short" />

   <TextView
        android:id="@+id/force_update_label" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" 
        android:text="text" 
        style="@style/PrimaryTextBold"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_centerInParent="true"
        android:layout_margin="40dp" />

    <Button
	    android:id="@+id/force_update_button" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingHorizontal="8dp"
        android:layout_marginBottom="@dimen/defaultHorizontalMargin"
        android:layout_centerInParent="true"
        style="@style/DefaultButton"/>

</RelativeLayout>
