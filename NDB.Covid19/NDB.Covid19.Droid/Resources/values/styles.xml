<?xml version="1.0" encoding="UTF-8"?>

<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="windowNoTitle">true</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:fontFamily">@font/ptsans_regular</item>
		<item name="android:colorBackground">@color/backgroundColor</item>
		<item name="colorPrimaryDark">@color/topbar</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
		<item name="android:statusBarColor">@color/topbar</item>
		<item name="windowActionBar">false</item>

	</style>

	<style name="AppTheme.Launcher">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
		<item name="android:colorBackground">@color/backgroundColor</item>
		<!-- Optional, on Android 5+ you can modify the colorPrimaryDark color to match the windowBackground color for further branding-->
		<item name="colorPrimaryDark">@color/topbar</item>
		<item name="android:navigationBarColor">@android:color/transparent</item>
		<item name="android:statusBarColor">@color/topbar</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="DefaultButton">
		<item name="android:background">@drawable/default_button</item>
		<item name="android:textColor">@drawable/default_button</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:height">48dp</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="SecondaryButton">
		<item name="android:background">@drawable/secondary_button</item>
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:height">48dp</item>
		<item name="android:layout_margin">8dp</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
		<item name="android:textSize">16sp</item>
	</style>
	
	<style name="DefaultButtonWhite">
		<item name="android:background">@drawable/default_button_white</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:width">200dp</item>
		<item name="android:height">40dp</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="DefaultButtonGreen">
		<item name="android:background">@drawable/default_button_green</item>
		<item name="android:textColor">@android:color/black</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:width">200dp</item>
		<item name="android:height">40dp</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="Divider">
		<item name="android:background">@color/dividerBlue</item> //you can give your color here. that will change all divider color in your app.
	</style>

	<style name="Divider.Horizontal" parent="Divider">
		<item name="android:layout_width">16dp</item>
		<item name="android:layout_height">3dp</item>
	</style>

	<style name="PrimaryTextMainScreenTitle">
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
		<item name="android:textSize">36sp</item>
	</style>

	<style name="PrimaryTextMainMenu">
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:fontFamily">@font/ptsans_regular</item>
		<item name="android:textSize">20sp</item>
	</style>

	<style name="PrimaryText">
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:fontFamily">@font/ptsans_regular</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="PrimaryTextRegular">
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:fontFamily">@font/ptsans_regular</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="PrimaryTextBold">
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="PrimaryTextSemiBold">
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:fontFamily">@font/ptsans_caption_regular</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="PrimaryTextItalic">
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:fontFamily">@font/ptsans_italic</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="PrimaryTextLight">
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:fontFamily">sans_serif_thin</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="SecondaryText">
		<item name="android:textColor">@color/secondaryText</item>
		<item name="android:fontFamily">@font/ptsans_narrow_regular</item>
		<item name="android:textSize">14sp</item>
	</style>

	<style name="HelpText">
		<item name="android:textColor">#747474</item>
		<item name="android:fontFamily">@font/ptsans_regular</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="ErrorText">
		<item name="android:textColor">#CC0000</item>
		<item name="android:fontFamily">@font/ptsans_caption_regular</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="WarningText">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:fontFamily">@font/ptsans_caption_regular</item>
		<item name="android:textSize">14dp</item>
	</style>
	
	<style name="BubbleText">
		<item name="android:textColor">@android:color/black</item>
		<item name="android:fontFamily">@font/ptsans_regular</item>
		<item name="android:textSize">13sp</item>
	</style>

	<style name="TopbarText">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:fontFamily">@font/ptsans_caption_regular</item>
		<item name="android:textSize">16sp</item>
	</style>

	<style name="LauncherAppName">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
		<item name="android:textSize">24sp</item>
	</style>

	<style name="LauncherHealthAuth">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:fontFamily">@font/ptsans_caption_regular</item>
		<item name="android:textSize">20sp</item>
		<item name="android:textAllCaps">true</item>
	</style>

	<style name="LauncherSubtitle">
		<item name="android:textColor">@android:color/white</item>
		<item name="android:fontFamily">@font/ptsans_caption_regular</item>
		<item name="android:textSize">14sp</item>
		<item name="android:alpha">0.74</item>
	</style>

	<style name="ExplanationTextHeader">
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:textSize">16sp</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
	</style>

	<style name="settings" parent="PrimaryTextBold">
		<item name="android:textSize">24sp</item>
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:translationY">-1.91sp</item>
	</style>

	<style name="settings_general" parent="PrimaryTextRegular">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">@color/primaryText</item>
		<item name="android:translationY">-1.91sp</item>
	</style>

	<style name="ScrollbarConsent">
		<item name="android:scrollbars">vertical</item>
		<item name="android:scrollbarThumbVertical">@android:color/white</item>
	</style>

	<style name="ConsentButton">
		<item name="android:gravity">center</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:background">@drawable/default_button</item>
		<item name="android:textColor">@drawable/default_button</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:padding">16dp</item>
	</style>
	<style name="ConsentButtonNoBorder" parent="ConsentButton">
		<item name="android:gravity">center</item>
		<item name="android:layout_centerHorizontal">true</item>
		<item name="android:background">#F3F9FB</item>
		<item name="android:textColor">#32345C</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:fontFamily">@font/ptsans_bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:paddingHorizontal">50dip</item>
		<item name="android:paddingVertical">5dip</item>
	</style>

	<style name="HeaderSmallText" parent="PrimaryTextBold">
		<item name="android:textSize">16sp</item>
		<item name="android:textColor">#FFFFFF</item>
		<item name="android:textStyle">bold</item>
	</style>
</resources>